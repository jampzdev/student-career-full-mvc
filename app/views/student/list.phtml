    <div class="card">
        <div class="card-body table-responsive">

            <table ng-table="studentTable" class="table table-display-inline table-striped table-vmiddle">
                <thead>
                    <tr>
                        <th> STUDENT NUMBER </th>
                        <th> NAME </th>
                        <th> YEAR </th>
                        <th> STA </th>

                    </tr>
                </thead>
                <tbody>
                   <tr ng-repeat="data in dataList">
                      <td width="20%" style="cursor:pointer;" data-ui-sref="career.update({id:data.id})" class="text-center">{{ data.student_no }}</td>
                       <td width="20%" style="cursor:pointer;" class="text-center">{{ data.lname }} {{ data.fname }}</td>
                       <td width="20%" style="cursor:pointer;" class="text-center">{{ data.yearlvl }}</td>
                        <td width="20%" style="cursor:pointer;" class="text-center">{{ data.student_status }}</td>
                   </tr>
                </tbody>
                <tfoot>
                  <tr ng-if="dataList.length == 0">
                      <td colspan="4">No record(s) found.</td>
                  </tr>
                </tfoot>
            </table>
        </div>
    </div>
