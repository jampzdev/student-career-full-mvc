                   <button type="file" ng-click="openFileUpload()" class="btn btn-default waves-effect">
                   <i class="zmdi zmdi-square-right" style="transform: scaleX(-1);"></i> IMPORT</button>
               </li>
               <input type="file" class="hidden" id="info-select-file" file-input="files" />
           </ul>
       </form>


